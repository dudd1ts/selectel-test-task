// В этом файле должны быть стили для БЭМ-блока page-header, его элементов,
// модификаторов, псевдоселекторов, псевдоэлементов, @media-условий...
// Очередность: http://nicothin.github.io/idiomatic-pre-CSS/#priority

.page-header
  display: block
  position: absolute
  z-index: 1000
  top: 0
  left: 0
  width: 100%
  padding: 40px 0
  transition: background-color $transition
  flex-direction: row

  &__inner
    display: flex
    justify-content: space-between
    align-items: center

  &__logo
    display block
    width: 113px
    height: 24px
    background: url('../img/selectel-logo.svg') no-repeat 50%
    opacity-transition()

  &__phone
    display: block
    flex-grow: 0
    width 22px
    height 22px
    font-size: 20px
    line-height: 22px
    color: #ffffff
    text-decoration: none
    background: url('../img/phone.svg') no-repeat 0 50%
    background-size: 22px
    text-indent: 100%;
    white-space: nowrap;
    overflow: hidden;
    opacity-transition()

    @media (min-width: $screen-lg)
      width: auto
      padding-left: 38px
      text-indent: 0

