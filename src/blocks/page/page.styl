// Глобальные стили (.page — на теге html)

.page
  box-sizing: border-box
  font-size: 10px
  -webkit-tap-highlight-color: rgba(0, 0, 0, 0)
  -ms-overflow-style: scrollbar
  -ms-text-size-adjust: 100%
  min-width: 320px
  min-height: 100%
  height: 100%

  &__inner
    display: flex
    flex-direction: column
    height: 100%

  &__content
    flex-grow: 1

  &__footer
    flex-shrink: 0
    padding: 32px 0
    background-color: #092433

    @media (min-width: $screen-lg)
      padding: 40px 0

.container
  width 288px
  margin: 0 auto

  @media (min-width: $screen-lg)
    width: 1136px


*
*:before
*:after
  box-sizing: inherit;

body
  background-color: #fff;
  margin: 0;
  min-height: 100%;
  font-family: $font-family;
  font-size: $font-size;
  line-height: $line-height;
  color: $text-color;
  height: 100%

[tabindex='-1']:focus
  outline: none !important;

// iOS 'clickable elements' fix for role='button'
[role='button'] {
  cursor: pointer;
}

// We love Safari
input[type='search']
  -webkit-appearance: textfield;

// Avoid 300ms click delay on touch devices that support the `touch-action` CSS property.
a
button
[role='button']
input
label
select
textarea
  touch-action: manipulation;

// We love EDGE! This is a browser!
svg
  a &
  button &
    pointer-events: none;

img
  max-width: 100%;
  height: auto;
